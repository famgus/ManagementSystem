<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".moduleView.transfer.TransferTypeFragment">

    <TextView
        android:id="@+id/tv_transfer_type_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:text="Opciones disponibles"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_transfer_type_receive"
        android:layout_width="0dp"
        android:layout_height="128dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_receive"

        app:layout_constraintEnd_toStartOf="@id/iv_transfer_type_deliver"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_transfer_type_title" />

    <ImageView
        android:id="@+id/iv_transfer_type_deliver"
        android:layout_width="0dp"
        android:layout_height="128dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/despachos"
        app:layout_constraintEnd_toStartOf="@id/iv_transfer_type_prepare"
        app:layout_constraintStart_toEndOf="@+id/iv_transfer_type_receive"
        app:layout_constraintTop_toBottomOf="@id/tv_transfer_type_title" />

    <ImageView
        android:id="@+id/iv_transfer_type_prepare"
        android:layout_width="0dp"
        android:layout_height="128dp"
        android:src="@drawable/ic_prepare"

        app:layout_constraintBottom_toBottomOf="@id/iv_transfer_type_receive"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_transfer_type_deliver"
        app:layout_constraintTop_toTopOf="@id/iv_transfer_type_receive" />

</androidx.constraintlayout.widget.ConstraintLayout>