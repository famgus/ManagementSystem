<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_rl"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:subtitleTextAppearance="@style/ToolbarSubtitleAppearance"
            app:titleTextAppearance="@style/ToolbarTitleAppearance" />

    </com.google.android.material.appbar.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/item_draft_instance_layout_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                fab:cardUseCompatPadding="true">

                <LinearLayout
                    android:id="@+id/item_container_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="6dp"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="8"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/format_rl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:src="@mipmap/ic_description_white_48dp"
                                android:tint="@color/colorPrimary" />

                            <TextView
                                android:id="@+id/txtNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="2dp"
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="2dp"
                                android:text="Número de Serie:"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/txtNumberValue_rl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="2dp"
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="2dp"
                                android:text="PPED"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/baseline_account_circle_white_24"
                                android:tint="@color/colorPrimary" />

                            <TextView
                                android:id="@+id/txtProvider_rl"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/format"
                                android:layout_marginStart="5dp"
                                android:lines="1"
                                android:text="Numero Pedido:"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/txtProviderValue_rl"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/format"
                                android:layout_marginStart="5dp"
                                android:lines="1"
                                android:text="123"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/baseline_today_white_18"
                                android:tint="@color/colorPrimary" />

                            <TextView
                                android:id="@+id/txtDateOrder_rl"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/format"
                                android:layout_marginStart="5dp"
                                android:lines="1"
                                android:text="Codigo Proveedor:"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/txtDateOrderValue_rl"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/format"
                                android:layout_marginStart="5dp"
                                android:lines="1"
                                android:text="27"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/baseline_today_white_18"
                                android:tint="@color/colorPrimary" />

                            <TextView
                                android:id="@+id/txtDateReception_rl"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/format"
                                android:layout_marginStart="5dp"
                                android:lines="1"
                                android:text="Fecha de Preparación:"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/txtDateReceptionValue_rl"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/format"
                                android:layout_marginStart="5dp"
                                android:lines="1"
                                android:text="07-08-2020"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textSize="12sp" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!-- table table master -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Detalles caja master"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!--table box mater -->
                <TableLayout
                    android:id="@+id/tlTableBoxMaster"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="#CCC"
                    android:paddingTop="1dp"
                    android:stretchColumns="0">

                    <TableRow
                        android:id="@+id/trTitleTableBoxMaster"
                        android:background="#CCC"
                        android:paddingRight="1dp"
                        android:paddingBottom="1dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@color/star_gold"
                            android:gravity="center"
                            android:padding="0dp"
                            android:text="No."
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_marginLeft="0px"
                            android:layout_weight="1dp"
                            android:background="@color/star_gold"
                            android:gravity="center"
                            android:padding="0dp"
                            android:text="Código caja master"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_marginLeft="0dp"
                            android:layout_weight="1"
                            android:background="@color/star_gold"
                            android:gravity="center"
                            android:padding="0dp"
                            android:text="---"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/trTableBoxMaster"
                        android:background="#CCC"
                        android:paddingRight="1dp"
                        android:paddingBottom="1dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:gravity="center"
                            android:padding="0dp"
                            android:text="1"
                            android:textColor="@color/black"
                            android:textStyle="normal" />

                        <TextView
                            android:layout_marginLeft="0px"
                            android:layout_weight="1dp"
                            android:background="@color/white"
                            android:gravity="center"
                            android:padding="0dp"
                            android:text="001MD23DE444"
                            android:textColor="@color/black"
                            android:textStyle="normal" />

                        <TextView
                            android:layout_marginLeft="0dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:gravity="center"
                            android:padding="0dp"
                            android:text="10"
                            android:textColor="@color/black"
                            android:textStyle="normal" />

                    </TableRow>
                </TableLayout>
                <!--end table box mater -->

            </LinearLayout>
            <!-- end table table master -->

            <!-- code bar-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Codigo de Barras"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etQuantityPicking"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:hint="001md2333"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/ivActionQuantityPicking"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_gravity="center_horizontal"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/scannerbarcode"
                    android:visibility="visible" />

            </LinearLayout>
            <!-- end code bar-->


            <!-- table products -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Detalles orden de traslado"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TableLayout
                    android:id="@+id/tlTable01_rl"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="#CCC"
                    android:paddingTop="1dp"
                    android:stretchColumns="0">

                    <TableRow
                        android:id="@+id/trItem1"
                        android:background="#CCC"
                        android:paddingRight="1dp"
                        android:paddingBottom="1dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@color/star_gold"
                            android:gravity="center"
                            android:padding="0dp"
                            android:text="No."
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_marginLeft="0px"
                            android:layout_weight="1dp"
                            android:background="@color/star_gold"
                            android:gravity="center"
                            android:padding="0dp"
                            android:text="Código Articulo"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_marginLeft="0dp"
                            android:layout_weight="1"
                            android:background="@color/star_gold"
                            android:gravity="center"
                            android:padding="0dp"
                            android:text="Talla"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_marginLeft="0dp"
                            android:layout_weight="1"
                            android:background="@color/star_gold"
                            android:gravity="center"
                            android:padding="0dp"
                            android:text="Color"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_marginLeft="0dp"
                            android:layout_weight="1"
                            android:background="@color/star_gold"
                            android:gravity="center"
                            android:padding="0dp"
                            android:text="Cantidad"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_marginLeft="0dp"
                            android:layout_weight="1"
                            android:background="@color/star_gold"
                            android:gravity="center"
                            android:padding="0dp"
                            android:text="---"
                            android:textColor="@color/white"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/trHeader_rl"
                        android:background="#CCC"
                        android:paddingRight="1dp"
                        android:paddingBottom="1dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:gravity="center"
                            android:padding="0dp"
                            android:text="1"
                            android:textColor="@color/black"
                            android:textStyle="normal" />

                        <TextView
                            android:layout_marginLeft="0px"
                            android:layout_weight="1dp"
                            android:background="@color/white"
                            android:gravity="center"
                            android:padding="0dp"
                            android:text="AXYB123"
                            android:textColor="@color/black"
                            android:textStyle="normal" />

                        <TextView
                            android:layout_marginLeft="0dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:gravity="center"
                            android:padding="0dp"
                            android:text="350"
                            android:textColor="@color/black"
                            android:textStyle="normal" />

                        <TextView
                            android:layout_marginLeft="0dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:gravity="center"
                            android:padding="0dp"
                            android:text="001"
                            android:textColor="@color/black"
                            android:textStyle="normal" />

                        <TextView
                            android:layout_marginLeft="0dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:gravity="center"
                            android:padding="0dp"
                            android:text="10"
                            android:textColor="@color/black"
                            android:textStyle="normal" />

                        <TextView
                            android:layout_marginLeft="0dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:gravity="center"
                            android:padding="0dp"
                            android:text="---"
                            android:textColor="@color/black"
                            android:textStyle="normal" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>
            <!-- end table products -->

            <!-- button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <Button
                    android:enabled="false"
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="50dp"
                    android:layout_marginStart="26dp"
                    android:layout_marginTop="56dp"
                    android:layout_marginEnd="24dp"
                    android:background="@color/colorPrimary"
                    android:text="Iniciar"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtpassword" />
            </LinearLayout>
            <!-- end button -->


        </LinearLayout>


    </ScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
