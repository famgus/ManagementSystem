<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_itempackofftransfer_box"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_cell_item"
        android:text="Caja master"
        app:layout_constraintBottom_toBottomOf="@id/tv_itempackofftransfer_quantity"
        app:layout_constraintEnd_toStartOf="@id/tv_itempackofftransfer_quantity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_itempackofftransfer_quantity"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_cell_item"
        android:text="Cant. Inter. Unidad"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cl_itempackoff_wrapper_quantity"
        app:layout_constraintStart_toEndOf="@id/tv_itempackofftransfer_box"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_itempackoff_wrapper_quantity"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:background="@drawable/bg_cell_item"
        app:layout_constraintBottom_toBottomOf="@id/tv_itempackofftransfer_quantity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_itempackofftransfer_quantity"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/tv_itempackofftransfer_quantity_to_packoff"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Cant. Despachada"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox

            android:id="@+id/cb_itempackoff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>